<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/manufacturer1_bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_manufacturer_number"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView android:src="@drawable/ic_manufacturer1"
            android:id="@+id/iv_manufacturer_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/tv_manufacturer_number"
            android:text="227"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/manufacturer1_number_color"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView android:id="@+id/tv_manufacturer_name"
        android:text="Ferrari"
        android:textColor="@color/manufacturer1_name_color"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        android:layout_below="@+id/ll_manufacturer_number"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>